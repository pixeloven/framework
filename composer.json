{
    "name": "pixeloven/framework",
    "description": "Simple laravel request model extension library",
    "keywords": ["pixeloven", "framework", "laravel", "lumen"],
    "license": "MIT",
    "authors": [
        {
            "name": "Brian Gebel",
            "email": "brian@pixeloven.com",
            "homepage": "https://www.pixeloven.com/"
        }
    ],
    "type": "library",
    "config": {
        "platform": {
            "php": "7.2"
        }
    },
    "require": {
        "php": ">=7.2"
    },
    "require-dev": {
        "laravel/lumen-framework": "5.5.2",
        "phpunit/phpunit": "~7.0",
        "squizlabs/php_codesniffer": "3.5.4",
        "phpcompatibility/php-compatibility": "9.3.5"
    },
    "autoload": {
        "psr-4": {
            "PixelOven\\": "src"
        }
    },
    "scripts": {
        "post-install-cmd": "vendor/bin/phpcs --config-set installed_paths vendor/phpcompatibility/php-compatibility",
        "post-update-cmd" : "vendor/bin/phpcs --config-set installed_paths vendor/phpcompatibility/php-compatibility",
        "lint": "vendor/bin/phpcs --standard=phpcs.xml -d memory_limit=100M",
        "test": "vendor/bin/phpunit -d memory_limit=100M"
    }
}
